{
    "name": "sohaibilyas/sendplex-php-sdk",
    "description": "Simple PHP SDK for SendPlex API.",
    "keywords": [
        "sohaibilyas",
        "sendplex-php-sdk"
    ],
    "homepage": "https://github.com/sohaibilyas/sendplex-php-sdk",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Sohaib Ilyas",
            "email": "contact@sohaibilyas.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "SohaibIlyas\\SendPlexPhpSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SohaibIlyas\\SendPlexPhpSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
